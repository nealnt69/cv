    }
    [contentEditable]:empty:before {
      content: attr(cv-placeholder);
      color: #9197a3;
      pointer-events: none;
      display: block;
    }
  </style>
  <body>
    <div
      class="app-container app-theme-white body-tabs-shadow fixed-sidebar fixed-header closed-sidebar"
