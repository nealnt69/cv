              </ul>
            </div>
          </div>
        </div>
        <div class="app-main__outer">
          <div class="app-main__inner">
            <div class="card" style="margin-bottom: 16px">
              <div
                class="position-relative form-group"
                style="padding: 16px 16px 0px 16px; display: flex"
              >
                <div style="flex: 1">
                  <label for="title">Tiêu đề</label>
                  <input id="title" class="form-control" />
                </div>
                <div id="image-preview" style="width: 826px; margin-left: 24px">
                  <label for="image-url">Link ảnh</label>
                  <input
                    id="image-url"
                    class="form-control"
                    style="flex: 1; margin-right: 24px"
                  />
                </div>
              </div>
            </div>
            <div class="tab-content">
              <div
                class="tab-pane tabs-animation fade show active"
                id="tab-content-0"
                role="tabpanel"
              >
                <div style="display: flex">
                  <div style="flex: 1">
                    <div class="main-card card">
                      <div class="card-body">
                        <h5 class="card-title">Code CV</h5>

                        <div class="position-relative form-group">
                          <textarea
                            name="text"
                            id="cv-code"
                            class="form-control"
                            style="height: 640px"
                          ></textarea>
                        </div>

                        <div
                          style="display: flex; justify-content: space-between"
                        >
                          <button id="btn-format" class="mt-1 btn btn-primary">
                            Format code
                          </button>
                          <button id="save-theme" class="mt-1 btn btn-success">
                            Lưu mẫu
                          </button>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div style="margin-left: 24px">
                    <div class="main-card mb-3 card">
                      <div class="card-body">
                        <h5 class="card-title">Xem Trước</h5>
                        <div
                          id="preview"
                          style="
                            padding: 8px;
                            border: 1px dashed #0000002e;
                            width: 800px;
                            margin: auto;
                            height: 673px;
                            overflow: auto;
                          "
                        ></div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script type="text/javascript" src="/javascripts/theme.js"></script>
  </body>
  <script src="/libs/codemirror.js"></script>
  <script src="/libs/mode.js"></script>
  <script src="/libs/formatting.js"></script>
  <script>
    const editor = CodeMirror.fromTextArea(document.getElementById("cv-code"), {
      lineNumbers: true,
      theme: "night",
      height: 900,
      mode: "text/html",
      lineWrapping: true,
    });

    editor.on("change", (e) => {
      document.getElementById("preview").innerHTML = editor.getValue();
    });

    document.getElementById("btn-format").addEventListener("click", () => {
      editor.setValue(
        html_beautify(document.getElementById("preview").innerHTML, {
          indent_size: 4,
          indent_char: " ",
          indent_level: 0,
          indent_with_tabs: false,
          preserve_newlines: true,
          max_preserve_newlines: 10,
          jslint_happy: false,
          space_after_named_function: false,
          space_after_anon_function: false,
          keep_array_indentation: false,
          keep_function_indentation: false,
          space_before_conditional: true,
          break_chained_methods: false,
          eval_code: false,
          unescape_strings: false,
          wrap_line_length: 80,
          indent_empty_lines: false,
          templating: ["auto"],
        })
      );
    });

    document
      .getElementById("save-theme")
      .addEventListener("click", async () => {
        axios({
          url: "/api/theme",
          method: "post",
          data: {
            title: document.getElementById("title").value,
            html: editor.getValue(),
            image: document.getElementById("image-url").value,
          },
        });
      });
  </script>
