<html>
  <head>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/@simonwep/pickr/dist/themes/classic.min.css"
    />
    <script src="https://cdn.jsdelivr.net/npm/@simonwep/pickr/dist/pickr.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@simonwep/pickr/dist/pickr.es5.min.js"></script>
    <link rel="stylesheet" href="/stylesheets/toolbar.css" />
  </head>
  <body>
    <div id="toolbar-container">
      <div id="toolbar-layout">
        <div class="toolbar-block">
          <div class="toolbar-block-row">
            <div id="toolbar-block-font">
              <div class="toolbar-block-title">Font chữ</div>
              <div class="select-box" id="toolbar-select-font">
                <div class="select-box__current" tabindex="1">
                  <div class="select-box__value">
                    <input
                      class="select-box__input"
                      type="radio"
                      id="font-0"
                      value="Arial"
                      name="font"
                      checked="checked"
                    />
                    <p
                      class="select-box__input-text"
                      style="font-family: Arial, Helvetica, sans-serif"
                    >
                      Arial
                    </p>
                  </div>
                  <div class="select-box__value">
                    <input
                      class="select-box__input"
                      type="radio"
                      id="font-1"
                      value="Times News Roman"
                      name="font"
                    />
                    <p
                      class="select-box__input-text"
                      style="font-family: 'Times New Roman', Times, serif"
                    >
                      Times News Roman
                    </p>
                  </div>
                  <div class="select-box__value">
                    <input
                      class="select-box__input"
                      type="radio"
                      id="font-2"
                      value="Sans-serif"
                      name="font"
                    />
                    <p
                      class="select-box__input-text"
                      style="font-family: sans-serif"
                    >
                      Sans-serif
                    </p>
                  </div>
                  <div class="select-box__value">
                    <input
                      class="select-box__input"
                      type="radio"
                      id="font-3"
                      value="Tahoma"
                      name="font"
                    />
                    <p
                      class="select-box__input-text"
                      style="
                        font-family: 'Segoe UI', Tahoma, Geneva, Verdana,
                          sans-serif;
                      "
                    >
                      Tahoma
                    </p>
                  </div>

                  <img
                    class="select-box__icon"
                    src="http://cdn.onlinewebfonts.com/svg/img_295694.svg"
                    alt="Arrow Icon"
                    aria-hidden="true"
                  />
                </div>
                <ul class="select-box__list">
                  <li>
                    <label
                      class="select-box__option"
                      for="font-0"
                      aria-hidden="aria-hidden"
                      style="font-family: Arial, Helvetica, sans-serif"
                      >Arial</label
                    >
                  </li>
                  <li>
                    <label
                      class="select-box__option"
                      for="font-1"
                      aria-hidden="aria-hidden"
                      style="font-family: 'Times New Roman', Times, serif"
                      >Times News Roman</label
                    >
                  </li>
                  <li>
                    <label
                      class="select-box__option"
                      for="font-2"
                      aria-hidden="aria-hidden"
                      style="font-family: sans-serif"
                      >Sans-serif</label
                    >
                  </li>
                  <li>
                    <label
                      class="select-box__option"
                      for="font-3"
                      aria-hidden="aria-hidden"
                      style="
                        font-family: 'Segoe UI', Tahoma, Geneva, Verdana,
                          sans-serif;
                      "
                      >Tahoma</label
                    >
                  </li>
                </ul>
              </div>
            </div>
            <div id="toolbar-block-font-size">
              <div class="toolbar-block-title">Cỡ chữ</div>
              <div class="select-box" id="toolbar-select-font-size">
                <div class="select-box__current" tabindex="1">
                  <div class="select-box__value">
                    <input
                      class="select-box__input"
                      type="radio"
                      id="font-size-small"
                      value="0.9"
                      name="font-size"
                    />
                    <p class="select-box__input-text">Nhỏ</p>
                  </div>
                  <div class="select-box__value">
                    <input
                      class="select-box__input"
                      type="radio"
                      id="font-size-medium"
                      value="1"
                      name="font-size"
                      checked="checked"
                    />
                    <p class="select-box__input-text">Vừa</p>
                  </div>
                  <div class="select-box__value">
                    <input
                      class="select-box__input"
                      type="radio"
                      id="font-size-big"
                      value="1.1"
                      name="font-size"
                    />
                    <p class="select-box__input-text">To</p>
                  </div>
                  <img
                    class="select-box__icon"
                    src="http://cdn.onlinewebfonts.com/svg/img_295694.svg"
                    alt="Arrow Icon"
                    aria-hidden="true"
                  />
                </div>
                <ul class="select-box__list">
                  <li>
                    <label
                      class="select-box__option"
                      for="font-size-small"
                      aria-hidden="aria-hidden"
                      >Nhỏ</label
                    >
                  </li>
                  <li>
                    <label
                      class="select-box__option"
                      for="font-size-medium"
                      aria-hidden="aria-hidden"
                      >Vừa</label
                    >
                  </li>
                  <li>
                    <label
                      class="select-box__option"
                      for="font-size-big"
                      aria-hidden="aria-hidden"
                      >To</label
                    >
                  </li>
                </ul>
              </div>
            </div>
          </div>
          <div class="toolbar-block-row">
            <button class="toolbar-text-style" id="toolbar-text-bold" disabled>
              B
            </button>
            <button
              class="toolbar-text-style"
              id="toolbar-text-italic"
              disabled
            >
              I
            </button>
            <button
              class="toolbar-text-style"
              id="toolbar-text-underline"
              disabled
            >
              U
            </button>
            <button
              class="toolbar-text-align-style"
              id="toolbar-text-left"
              disabled
            >
              <i class="fa fa-align-left" aria-hidden="true"></i>
            </button>
            <button
              class="toolbar-text-align-style"
              id="toolbar-text-center"
              disabled
            >
              <i class="fa fa-align-center" aria-hidden="true"></i>
            </button>
            <button
              class="toolbar-text-align-style"
              id="toolbar-text-right"
              disabled
            >
              <i class="fa fa-align-right" aria-hidden="true"></i>
            </button>
            <button
              class="toolbar-text-align-style"
              id="toolbar-text-justify"
              disabled
            >
              <i class="fa fa-align-justify" aria-hidden="true"></i>
            </button>
          </div>
        </div>
        <div class="tool-line"></div>

        <div class="toolbar-block">
          <div id="toolbar-block-line-hight">
            <div class="toolbar-block-title">Cách dòng</div>
            <div
              class="toolbar-block-row row-align-center row-justify-center"
              style="margin-bottom: 6px"
            >
              <div
                id="toolbar-line-hight-small"
                class="toolbar-line-hight-item"
              >
                <i class="fa fa-arrows-v" aria-hidden="true"></i>
              </div>
              <div
                id="toolbar-line-hight-medium"
                class="toolbar-line-hight-item"
              >
                <i class="fa fa-arrows-v" aria-hidden="true"></i>
              </div>
              <div
                id="toolbar-line-hight-large"
                class="toolbar-line-hight-item"
              >
                <i class="fa fa-arrows-v" aria-hidden="true"></i>
              </div>
            </div>
          </div>
          <div id="toolbar-color-picker">
            <div id="toolbar-color-picker-btn"></div>
            <div id="toolbar-color-picker-val">
              <div class="toolbar-block-title">Tông màu</div>
              <div id="toolbar-color-picker-val-text"></div>
            </div>
          </div>
        </div>
        <div class="tool-line"></div>

        <div class="toolbar-block">
          <div id="toolbar-language">
            <div class="toolbar-block-title">Ngôn ngữ</div>
            <div class="toolbar-block-row">
              <div class="toolbar-language-flag" id="language-vi">
                <img src="/images/vi.webp" alt="" />
                <div class="toolbar-language-active"></div>
              </div>
              <div class="toolbar-language-flag" id="language-en">
                <img
                  src="/images/en.webp"
                  alt=""
                  class="toolbar-language-flag"
                />
              </div>
              <!-- <div class="toolbar-language-flag">
                <img
                  src="/images/flag-ja-2499d2fd60f0f0ea9be26f5e58975b63.png"
                  alt=""
                  class="toolbar-language-flag"
                />
              </div> -->
            </div>
          </div>
          <div id="toolbar-translate"><i class="fa fa-globe"></i> Dịch CV</div>
        </div>
        <div class="tool-line"></div>

        <div class="toolbar-block">
          <div id="toolbar-grid">
            <div class="toolbar-block-title">Bố cục</div>
            <i class="fa fa-th-large" aria-hidden="true"></i>
          </div>
          <div id="toolbar-undo-redo">
            <div id="toolbar-undo" class="toolbar-undo-redo-item">
              <i class="fa fa-undo" aria-hidden="true"></i>
            </div>
            <div id="toolbar-redo" class="toolbar-undo-redo-item">
              <i class="fa fa-redo" aria-hidden="true"></i>
            </div>
          </div>
        </div>
        <div class="tool-line"></div>
        <div class="toolbar-block">
          <div id="toolbar-change-theme">
            <div class="toolbar-block-title">Đổi mẫu CV</div>
            <i class="fa fa-files-o" aria-hidden="true"></i>
          </div>
          <div id="toolbar-preview">
            <i class="fa fa-eye" aria-hidden="true"></i>
            <span>Xem trước</span>
          </div>
        </div>
        <div class="tool-line"></div>
        <div class="toolbar-block" id="toolbar-save-cv">
          <div class="toolbar-block-title">Lưu CV</div>
          <i class="fa fa-file-pdf-o" aria-hidden="true"></i>
        </div>
      </div>
    </div>
  </body>
  <script src="/javascripts/toolbar.js"></script>
</html>
